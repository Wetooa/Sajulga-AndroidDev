<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/paneMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="main_activity.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnLayoutExercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Layout Exercise" />

        <Button
            android:id="@+id/btnButtonExercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button Exercise" />

        <Button
            android:id="@+id/btnCalculator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button Exercise" />

        <Button
            android:id="@+id/btnMidterm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Midtern" />

        <Button
            android:id="@+id/btnMatch3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Match 3" />

        <Button
            android:id="@+id/btnPassingIntents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Passing Intents" />

        <Button
            android:id="@+id/btnFragments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fragments" />

        <Button
            android:id="@+id/btnMenus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menus" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>